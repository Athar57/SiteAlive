@model System.Data.DataTable
@using System.Data;

<div>
    <h1 class="text-center colorTextCode">
        Parsed Bridge Data
    </h1>
    <hr />
    @if (Model != null)
    {
        <table class="table table-hover" id="bridgeTable">
            <thead>
                <tr style="border-width: 3px">

                    <th>Highway</th>
                    <th>GPS location</th>
                    <th>Category</th>
                    <th>Year built</th>
                    <th>Years Since Maintenance</th>

                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Rows)
                {
                    <tr style="border-width: 3px">
                        <td>@row[0]</td>
                        <td>
                            <a class="colorTextCode" href="@row[1]">@row[1]</a>
                        </td>

                        <td>@row[2]</td>

                        <td>@row[3]</td>

                        <td>@row[4]</td>

                    </tr>
                }
            </tbody>
        </table>
    }
</div>


@section Scripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#bridgeTable').DataTable();
        });
    </script>


  }
